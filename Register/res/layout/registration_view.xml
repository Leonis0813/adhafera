<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dip"
        android:id="@+id/date">
    	<TextView
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_weight="1"
    	    android:id="@+id/label_date"
    	    android:text="@string/date"
    	    android:textSize="25sp"
    	    />
    	<EditText
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_weight="1"
    	    android:id="@+id/field_date"
    	    />
    	<TextView
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text="@string/error"
    	    android:textSize="25sp"
    	    android:textColor="#ff0000"
    	    android:visibility="invisible"
    	    android:id="@+id/check_date"
    	    />
    </LinearLayout>

   	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:id="@+id/content"
        >
    	<TextView
        	android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
        	android:layout_weight="1"
    	    android:id="@+id/label_content"
    	    android:text="@string/content"
        	android:textSize="25sp"
        	/>
    	<EditText
    	    android:layout_width="match_parent"
        	android:layout_height="wrap_content"
    	    android:layout_weight="1"
    	    android:id="@+id/field_content"
        	/>
    	<TextView
    	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
    	    android:text="@string/error"
    	    android:textSize="25sp"
        	android:textColor="#ff0000"
    	    android:visibility="invisible"
    	    android:id="@+id/check_content"
        	/>
    </LinearLayout>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:id="@+id/category"
        >
   		<TextView
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:id="@+id/label_category"
        	android:text="@string/category"
        	android:textSize="25sp"
        	/>
    	<EditText
    	    android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:id="@+id/field_category"
        	/>
    	<TextView
    	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/error"
        	android:textSize="25sp"
        	android:textColor="#ff0000"
        	android:visibility="invisible"
        	android:id="@+id/check_category"
        	/>
    </LinearLayout>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category"
        android:id="@+id/price"
        >
    	<TextView
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:id="@+id/label_price"
        	android:text="@string/price"
        	android:textSize="25sp"
        	/>
    	<EditText
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:id="@+id/field_price"
        	/>
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/error"
        	android:textSize="25sp"
        	android:textColor="#ff0000"
        	android:visibility="invisible"
        	android:id="@+id/check_price"
        	/>
    </LinearLayout>
        
    <RadioGroup
        android:orientation="horizontal"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerInParent="true"
    	android:layout_below="@id/price"
    	android:layout_marginTop="30dip"
    	android:id="@+id/radiogroup"
    	>
    	<RadioButton
       		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:id="@+id/income"
        	android:text="@string/income"
        	android:textSize="20sp" />
    	<RadioButton
     		android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:id="@+id/expense"
 	        android:text="@string/expense"
 	        android:textSize="20sp"
 	        android:checked="true" />
    </RadioGroup>

    <LinearLayout
       	android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dip"
        android:layout_alignParentBottom="true">
        <Button
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:layout_marginLeft="25dip"
        	android:layout_marginRight="25dip"
        	android:id="@+id/OK"
        	android:text="@string/OK">
       	</Button>
       	<Button
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:layout_marginLeft="25dip"
        	android:layout_marginRight="25dip"
  	 		android:id="@+id/cancel"
        	android:text="@string/cancel">
   		</Button>
    </LinearLayout>
</RelativeLayout>
